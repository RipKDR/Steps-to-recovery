{
  "name": "steps-to-recovery-monorepo",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "test": "turbo run test",
    "lint": "turbo run lint",
    "clean": "turbo run clean",
    "mobile": "cd apps/mobile && npm start",
    "web": "cd apps/web && npm run dev",
    "android": "cd apps/mobile && npx expo run:android",
    "ios": "cd apps/mobile && npx expo run:ios"
  },
  "devDependencies": {
    "@types/sql.js": "^1.4.9",
    "turbo": "^2.7.3",
    "typescript": "~5.9.3"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
