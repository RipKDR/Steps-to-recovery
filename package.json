{
  "name": "steps-to-recovery-monorepo",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "test": "turbo run test",
    "lint": "turbo run lint",
    "clean": "turbo run clean",
    "mobile": "cd apps/mobile && npm start",
    "web": "cd apps/web && npm run dev",
    "android": "expo run:android",
    "ios": "expo run:ios"
  },
  "devDependencies": {
    "turbo": "^1.11.0",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "dependencies": {
    "expo-dev-client": "~6.0.20",
    "expo-insights": "~0.10.8",
    "expo": "~54.0.30",
    "react": "19.1.0",
    "react-native": "0.81.5"
  }
}
