{
  "name": "steps-to-recovery-monorepo",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "test": "turbo run test",
    "lint": "turbo run lint",
    "clean": "turbo run clean",
    "mobile": "cd apps/mobile && npm start",
    "web": "cd apps/web && npm run dev",
    "android": "cd apps/mobile && npx expo run:android",
    "ios": "cd apps/mobile && npx expo run:ios"
  },
  "devDependencies": {
    "@types/sql.js": "^1.4.9",
    "supabase": "^2.72.3",
    "turbo": "^2.7.3",
    "typescript": "^5.9.3"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "dependencies": {
    "@react-native-community/datetimepicker": "^8.6.0",
    "@react-native-community/slider": "^5.1.1",
    "@sentry/react-native": "^7.8.0",
    "expo": "~54.0.0",
    "expo-dev-client": "~6.0.20",
    "expo-insights": "^0.10.8",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-native": "^0.81.5"
  }
}
