{
  "expo": {
    "name": "Steps to Recovery",
    "slug": "steps-to-recovery",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "automatic",
    "jsEngine": "hermes",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#4F8FC0"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.recovery.stepstorecovery",
      "infoPlist": {
        "NSLocationAlwaysAndWhenInUseUsageDescription": "We use your location to notify you when you're near saved meeting locations to provide timely support.",
        "NSLocationWhenInUseUsageDescription": "We use your location to help you save meeting locations for geofencing support.",
        "NSLocationAlwaysUsageDescription": "We use your location in the background to notify you when you're near saved meeting locations.",
        "UIBackgroundModes": ["location", "fetch", "processing"]
      }
    },
    "android": {
      "package": "com.recovery.stepstorecovery",
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#4F8FC0"
      },
      "permissions": [
        "ACCESS_FINE_LOCATION",
        "ACCESS_COARSE_LOCATION",
        "ACCESS_BACKGROUND_LOCATION",
        "POST_NOTIFICATIONS",
        "RECEIVE_BOOT_COMPLETED",
        "SCHEDULE_EXACT_ALARM"
      ],
      "edgeToEdgeEnabled": false,
      "predictiveBackGestureEnabled": false
    },
    "web": {
      "favicon": "./assets/favicon.png",
      "bundler": "metro",
      "output": "single",
      "build": {
        "babel": {
          "include": ["sql.js", "idb"]
        }
      },
      "meta": {
        "name": "Steps to Recovery",
        "description": "A private, offline-first recovery companion app for addiction recovery",
        "keywords": "recovery,addiction,sobriety,journal,12-step",
        "theme-color": "#4F8FC0"
      },
      "pwa": {
        "name": "Steps to Recovery",
        "shortName": "Recovery",
        "description": "Your private recovery companion",
        "themeColor": "#4F8FC0",
        "backgroundColor": "#FFFFFF",
        "display": "standalone",
        "startUrl": "/",
        "scope": "/",
        "icons": [
          {
            "src": "./assets/icon.png",
            "sizes": "512x512",
            "type": "image/png",
            "purpose": "any maskable"
          }
        ]
      }
    },
    "plugins": [
      "expo-secure-store",
      "expo-sqlite",
      [
        "expo-notifications",
        {
          "color": "#4F8FC0"
        }
      ],
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "We use your location to notify you when you're near saved meeting locations to provide timely support.",
          "locationWhenInUsePermission": "We use your location to help you save meeting locations for geofencing support."
        }
      ],
      [
        "@sentry/react-native/expo",
        {
          "organization": "steps-to-recovery",
          "project": "mobile"
        }
      ],
      "@react-native-community/datetimepicker",
      "expo-router"
    ],
    "updates": {
      "enabled": false
    },
    "extra": {
      "eas": {
        "projectId": "cc789e98-8c7f-4bf1-9125-23e0b83b8f00"
      }
    },
    "owner": "ripkdr"
  }
}
