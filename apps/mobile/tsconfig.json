{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "baseUrl": ".",
    "strict": true,
    "noEmit": true,
    "forceConsistentCasingInFileNames": true,
    "allowJs": false,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "paths": {
      "@/*": ["./src/*"],
      "@/components/*": ["./src/components/*"],
      "@/lib/*": ["./src/lib/*"],
      "@/design-system": ["./src/design-system/index.ts"],
      "@/design-system/*": ["./src/design-system/*"],
      "@recovery/shared/*": ["../../packages/shared/src/*"],
      "@recovery/shared": ["../../packages/shared/src/index.ts"]
    }
  },
  "include": [
    "src",
    "App.tsx",
    "index.ts",
    "scripts/**/*.ts",
    "nativewind-env.d.ts"
  ],
  "exclude": [
    "node_modules",
    "android",
    "ios",
    ".expo",
    ".turbo",
    "coverage",
    "**/__tests__",
    "**/*.test.ts",
    "**/*.test.tsx",
    "../../_bmad-output"
  ]
}
