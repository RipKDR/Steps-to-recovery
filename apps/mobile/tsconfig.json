{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    // === Compatibility ===
    "ignoreDeprecations": "5.0",

    // === Module Resolution ===
    "baseUrl": ".",
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,

    // === Strict Type Checking (CLAUDE.md requirement) ===
    "strict": true,
    "noEmit": true,
    "allowJs": false,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": false,
    "exactOptionalPropertyTypes": false,

    // === Target & Libraries ===
    "target": "ES2022",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],

    // === JSX ===
    "jsx": "react-jsx",

    // === Performance ===
    "skipLibCheck": true,
    "incremental": true,

    // === Path Aliases ===
    "paths": {
      "@/*": ["./src/*"],
      "@/components/*": ["./src/components/*"],
      "@/contexts/*": ["./src/contexts/*"],
      "@/features/*": ["./src/features/*"],
      "@/hooks/*": ["./src/hooks/*"],
      "@/lib/*": ["./src/lib/*"],
      "@/utils/*": ["./src/utils/*"],
      "@/design-system": ["./src/design-system/index.ts"],
      "@/design-system/*": ["./src/design-system/*"],
      "@recovery/shared": ["../../packages/shared/src/index.ts"],
      "@recovery/shared/*": ["../../packages/shared/*"]
    }
  },
  "include": [
    "src/**/*",
    "App.tsx",
    "index.ts",
    "polyfills.ts",
    "scripts/**/*.ts",
    "nativewind-env.d.ts"
  ],
  "exclude": [
    "node_modules",
    "android",
    "ios",
    ".expo",
    ".turbo",
    "coverage",
    "dist",
    "build",
    "**/__tests__/**",
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/*.spec.ts",
    "**/*.spec.tsx"
  ]
}
