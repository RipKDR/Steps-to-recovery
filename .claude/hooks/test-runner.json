{
  "name": "test-runner",
  "description": "Run related tests after code changes",
  "event": "after-edit",
  "patterns": [
    "apps/mobile/src/**/*.ts",
    "apps/mobile/src/**/*.tsx"
  ],
  "exclude": [
    "**/__tests__/**",
    "**/test-utils/**",
    "**/*.test.ts",
    "**/*.spec.ts"
  ],
  "command": "cd apps/mobile && npm test -- --bail --findRelatedTests --passWithNoTests",
  "failOnError": false,
  "timeout": 120000
}
