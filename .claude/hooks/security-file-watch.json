{
  "name": "security-file-watch",
  "description": "Auto-audit security-critical files when modified",
  "event": "after-edit",
  "patterns": [
    "**/encryption.ts",
    "**/secureStorage/**",
    "**/sync*.ts",
    "**/auth*.ts",
    "**/*Supabase*.ts"
  ],
  "action": "notify",
  "message": "Security-critical file modified. Consider running: security-auditor agent"
}
