{
  "mcpServers": {
    "memory": {
      "transport": "stdio",
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-memory"
      ],
      "description": "Persistent memory for architectural decisions and project context"
    },
    "filesystem": {
      "transport": "stdio",
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-filesystem",
        "."
      ],
      "description": "Advanced file operations for the project directory"
    },
    "sequential-thinking": {
      "transport": "stdio",
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-sequential-thinking"
      ],
      "description": "Structured reasoning for complex architectural decisions"
    },
    "context7": {
      "transport": "http",
      "url": "https://mcp.context7.com/mcp",
      "description": "Context7 documentation lookup"
    }
  }
}